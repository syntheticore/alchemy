@import './variables.styl'

body
  height: 100vh
  margin: 0
  color: white
  background: none
  overflow: hidden
  font-family: arial, sans-serif

[data-platform="browser"]
[data-platform="darwin"]
  body
    background: $dark1
    // background: rgba($dark1, 0)

form
  fieldset
    padding-left: 6px
    margin-top: 6px
  legend
    color: $bright1 * 0.95
    font-size: 13px
    font-weight: bold
    margin: 6px 0
    margin-left: -6px
  label
    display: block
    color: $bright2
  .inset
    margin-bottom: 6px
    &:last-child
      margin-bottom: 0
  select, input[type="text"], input[type="number"]
    margin-left: 8px
  input[type="checkbox"]
    margin-right: 8px
  input[type="text"], input[type="number"]
    background: $bright2
    border: none
    border: 2px solid transparent
    font-weight: 700
    border-radius: 3px
    padding: 3px 0 3px 5px
    font-size: 11px
    transition: all 0.4s
    &:focus
      background: $bright1
      border: 2px solid $highlight

.button
  color: $bright1
  box-shadow: 0 0 0 1px $dark2 * 0.55
  text-shadow: 0 -1px 0px black
  border: 1px solid $dark1 * 1.1
  border-top-color: $dark1 * 1.5
  background: linear-gradient(top, $dark1 * 1.2, rgba($dark2 * 1.4, 0.0)), $dark2 * 1.4
  // background: linear-gradient(top, $dark1 * 1.2, $dark2 * 1.3)
  font-size: 14px
  border-radius: 2px
  padding: 4px 8px
  // cursor: pointer
  transition: background 0.4s, border 0.4s
  font-size: 16px
  margin: 4px 5px
  &:hover
    // background: linear-gradient(top, $dark1 * 1.3, $dark2 * 1.4)
    background: linear-gradient(top, $dark1 * 1.2, rgba($dark2 * 1.3, 0.0)), $dark2 * 1.8
    border-top-color: $dark1 * 1.7
    transition: none
  &.pressed
  &:active
    border: 1px solid $dark1 * 0.95
    background: linear-gradient(top, $dark1 * 1.1, $dark2 * 1.275)
  svg
    filter: drop-shadow(0 -1px 0px rgba(0,0,0, 0.6))

.bordered
  border-radius: 5px
  border: 1px solid $dark1 * 1.1
  border-top-color: $dark1 * 1.25
  background: rgba($dark2, 0.95)
  box-shadow: 0 0 0 1px $dark2 * 0.5, 0 2px 10px rgba(black, 0.15)
  -webkit-backdrop-filter: blur(8px)
  backdrop-filter: blur(8px)

alchemy-editor
  height: 100%
